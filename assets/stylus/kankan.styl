@import 'nib'

$color1 = #C4D4CB
$color2 = #55665E
$color3 = #30282A
$color4 = #542733
$color5 = #E84167

body
  background $color1
  font-size 14px
  padding-top 40px

h2
  color $color2
  font-size 36px
  margin 40px 0 30px 0

.login input
  display block
  margin-bottom 5px

.board_link
  color $color2

.board
  margin-top 20px

.board th
  font-size 16px
  padding-bottom 20px

.board td
  border-top 1px solid $color2
  padding-top 20px

.card
  background white
  border 5px solid $color4
  cursor pointer
  height 100px
  margin-bottom 10px
  padding 10px
  width 200px
  
  border-radius 10px

.modal
  border-radius 10px
  border 5px solid $color4
  padding 20px

.modal h2
  font-size 24px
  margin 0 0 10px 0

#cardModal .close
  margin 0

#addCardButton
  margin-left 3px